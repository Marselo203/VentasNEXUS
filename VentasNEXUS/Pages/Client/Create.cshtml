@page
@model VentasNEXUS.Pages.Client.CreateModel

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/fondos/clicre.css">
<h1>Agregar Nuevo Cliente</h1>
<h4>clientes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label asp-for="Client.Name" class="custom-label">Nombre</label>
                <input asp-for="Client.Name" class="form-control custom-input" />
                <span asp-validation-for="Client.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Client.LastName" class="custom-label">Apellido</label>
                <input asp-for="Client.LastName" class="form-control custom-input" />
                <span asp-validation-for="Client.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Client.Nit" class="custom-label">NIT</label>
                <input asp-for="Client.Nit" class="form-control custom-input" />
                <span asp-validation-for="Client.Nit" class="text-danger"></span>
            </div>

            <div class="custom-form-group">
                <button type="submit" class="btn btn-primary custom-btn">Crear</button>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
